{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "blog-chenxing"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.less"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/tether/dist/js/tether.js",
        "assets/bootstrap/dist/js/bootstrap.min.js",
        "assets/tinymce/tinymce.js",
        "assets/tinymce/themes/modern/theme.js",
        "assets/tinymce/plugins/advlist/plugin.js",
        "assets/tinymce/plugins/autolink/plugin.js",
        "assets/tinymce/plugins/lists/plugin.js",
        "assets/tinymce/plugins/link/plugin.js",
        "assets/tinymce/plugins/image/plugin.js",
        "assets/tinymce/plugins/charmap/plugin.js",
        "assets/tinymce/plugins/print/plugin.js",
        "assets/tinymce/plugins/preview/plugin.js",
        "assets/tinymce/plugins/hr/plugin.js",
        "assets/tinymce/plugins/anchor/plugin.js",
        "assets/tinymce/plugins/pagebreak/plugin.js",
        "assets/tinymce/plugins/searchreplace/plugin.js",
        "assets/tinymce/plugins/wordcount/plugin.js",
        "assets/tinymce/plugins/visualblocks/plugin.js",
        "assets/tinymce/plugins/visualchars/plugin.js",
        "assets/tinymce/plugins/code/plugin.js",
        "assets/tinymce/plugins/codesample/plugin.js",
        "assets/tinymce/plugins/fullscreen/plugin.js",
        "assets/tinymce/plugins/insertdatetime/plugin.js",
        "assets/tinymce/plugins/media/plugin.js",
        "assets/tinymce/plugins/nonbreaking/plugin.js",
        "assets/tinymce/plugins/save/plugin.js",
        "assets/tinymce/plugins/table/plugin.js",
        "assets/tinymce/plugins/contextmenu/plugin.js",
        "assets/tinymce/plugins/directionality/plugin.js",
        "assets/tinymce/plugins/emoticons/plugin.js",
        "assets/tinymce/plugins/template/plugin.js",
        "assets/tinymce/plugins/paste/plugin.js",
        "assets/tinymce/plugins/textcolor/plugin.js",
        "assets/tinymce/plugins/colorpicker/plugin.js",
        "assets/tinymce/plugins/textpattern/plugin.js",
        "assets/tinymce/plugins/imagetools/plugin.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "less",
    "component": {
      "spec": false
    },
    "directive": {
      "spec": false
    },
    "module": {
      "spec": false
    },
    "pipe": {
      "spec": false
    }
  }
}
